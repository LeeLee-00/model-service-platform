# Define your custom OpenAI-compatible endpoints here
# Example with local Qwen model:
MODELS=[{"name":"local-qwen","displayName":"Local LLM (Qwen 0.5B)","parameters":{"temperature":0.7,"max_new_tokens":1024,"top_p":0.95},"endpoints":[{"type":"openai","baseURL":"http://llm:8000/v1","completion":"chat_completions"}]}]

